package arreglos;

import clases.Cliente;
import java.util.ArrayList;

public class ArregloCliente {
    private ArrayList<Cliente> cliente;

    public ArregloCliente() {
        cliente = new ArrayList<>();
    }

    public int tamanio() {
        return cliente.size();
    }

    public Cliente obtener(int i) {
        return cliente.get(i);
    }

    public int codigoCorrelativo() {
        // Supón que los códigos son correlativos y empiezan en 1
        if (cliente.isEmpty())
            return 1;
        else
            return cliente.get(cliente.size() - 1).getCodigo() + 1;
    }

    public void adicionar(Cliente c) {
        cliente.add(c);
    }

    public void eliminar(Cliente c) {
        cliente.remove(c);
    }

    public Cliente buscar(int codigo) {
        for (Cliente c : cliente) {
            if (c.getCodigo() == codigo)
                return c;
        }
        return null;
    }

    // ---> MÉTODO NUEVO PARA BUSCAR POR NÚMERO DE DOCUMENTO <---
    public Cliente buscar(long numeroDeDocumento) {
        for (Cliente c : cliente) {
            if (c.getNumeroDeDocumento() == numeroDeDocumento)
                return c;
        }
        return null;
    }
}