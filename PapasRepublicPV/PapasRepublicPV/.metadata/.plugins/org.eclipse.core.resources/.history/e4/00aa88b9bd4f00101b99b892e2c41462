package clases;

public class Usuario {
    private int codigo;
    private String nombreDeUsuario;
    private String contraseña; // Idealmente, esto debería ser un hash
    private boolean permisoCreate;
    private boolean permisoRead;
    private boolean permisoUpdate;
    private boolean permisoDelete;

    // Constructor
    public Usuario(int codigo, String nombreDeUsuario, String contraseña,
                    boolean permisoCreate, boolean permisoRead, boolean permisoUpdate, boolean permisoDelete) {
        this.codigo = codigo;
        this.nombreDeUsuario = nombreDeUsuario;
        this.contraseña = contraseña;
        this.permisoCreate = permisoCreate;
        this.permisoRead = permisoRead;
        this.permisoUpdate = permisoUpdate;
        this.permisoDelete = permisoDelete;
    }

    // Getters y Setters
    public int getCodigo() {
        return codigo;
    }

    public void setCodigo(int codigo) {
        this.codigo = codigo;
    }

    public String getNombreDeUsuario() {
        return nombreDeUsuario;
    }

    public void setNombreDeUsuario(String nombreDeUsuario) {
        this.nombreDeUsuario = nombreDeUsuario;
    }

    public String getContraseña() {
        return contraseña;
    }

    public void setContraseña(String contraseña) {
        this.contraseña = contraseña;
    }

    public boolean isPermisoCreate() {
        return permisoCreate;
    }

    public void setPermisoCreate(boolean permisoCreate) {
        this.permisoCreate = permisoCreate;
    }

    public boolean isPermisoRead() {
        return permisoRead;
    }

    public void setPermisoRead(boolean permisoRead) {
        this.permisoRead = permisoRead;
    }

    public boolean isPermisoUpdate() {
        return permisoUpdate;
    }

    public void setPermisoUpdate(boolean permisoUpdate) {
        this.permisoUpdate = permisoUpdate;
    }

    public boolean isPermisoDelete() {
        return permisoDelete;
    }

    public void setPermisoDelete(boolean permisoDelete) {
        this.permisoDelete = permisoDelete;
    }
}